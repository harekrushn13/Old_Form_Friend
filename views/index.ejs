<%- include("partials/header") -%>


    <!-- create google form -->
    <div class="container">
        <div class="col">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <h3 class="mb-0">Create Google Forms</h3>
                    <p class="card-text mb-auto">You can easily go throw create form to create a google form on
                        Google platform.</p>

                    <button id="create-form-btn" class="card-btn" target="_blank">Create Form</button>

                </div>
                <div class="col-auto d-none d-lg-block">
                    <img class="card-image" src="images/google_form.png" alt="Google Form">
                </div>
            </div>
        </div>
        <div class="col">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <h3 class="mb-0">Add Google Forms</h3>
                    <p class="card-text mb-auto">You can easily add your Google Form url to our website for a set
                        reminder to any specific Form. </p>
                    <button id="add-form-btn" class="card-btn open-button popup-link">Add Form</button>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <img class="card-image" src="images/add_form.png" alt="Google Form">
                </div>
            </div>
        </div>
    </div>

    <!-- add link popup -->
    <div class="popup-container" id="addform">
        <form action="/create" class="popup-content" method="post">
            <button type="button" class="btn-close closeBtn" aria-label="Close"></button>
            <h3>Add Your From</h3>
            <hr>
            <div class="link-div">
                <label for="link" class="label-link"><b>Add Link</b></label>
                <input class="input-link" type="text" placeholder="Paste Google Form Link" name="formID" required
                    autocomplete="off">
            </div>

            <button type="submit" class="submit-link card-btn">Submit</button>
        </form>
    </div>


    <div class="container">
        <div class="col-6" style="margin: auto;">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <h3 class="mb-0">View Google Forms</h3>
                    <p class="card-text mb-auto">Here you can see your all Google form Details. </p>
                    <button id="view-form-btn" class="card-btn">View Form</button>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <img class="card-image" src="images/view_form.png" alt="Google Form">
                </div>
            </div>
        </div>
    </div>



    <!-- carosel -->
    <div id="carousel-auto" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/slide1.jpg" class="carousel-image" loading="eager">
            </div>
            <div class="carousel-item">
                <img src="https://source.unsplash.com/900x500/?codeing" class="carousel-image" loading="eager">
            </div>
            <div class="carousel-item">
                <img src="https://source.unsplash.com/900x500/?nature" class="carousel-image" loading="eager">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-auto" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel-auto" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- footer -->
    <%- include("partials/footer") -%>



        <!-- add index.js -->
        <script src="JS/index.js"></script>


        <!-- Add Bootstrap CDN -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
            crossorigin="anonymous"></script>

        </body>

        </html>